<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.Controllers.AdminEventosController"
      spacing="12">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Eventos"
           style="-fx-font-size: 20; -fx-font-weight: bold;"/>

    <TableView fx:id="eventosTable" prefHeight="450">
       <columns>
    <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
    <TableColumn fx:id="colTitulo" text="Título" prefWidth="220"/>
    <TableColumn fx:id="colLocal" text="Local" prefWidth="150"/>
    <TableColumn fx:id="colCapacidade" text="Capacidade" prefWidth="120"/>
    <TableColumn fx:id="colInicio" text="Início" prefWidth="160"/>
    <TableColumn fx:id="colFim" text="Fim" prefWidth="160"/>
    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
</columns>

    </TableView>

</VBox>
