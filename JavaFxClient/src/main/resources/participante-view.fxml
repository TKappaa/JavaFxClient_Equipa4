<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="lp.JavaFxClient.Controllers.ParticipanteController"
            fx:id="rootPane">

    <!-- TOP -->
    <top>
        <HBox spacing="20" style="-fx-padding: 15;">
            <Label fx:id="welcomeLabel"
                   style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button fx:id="btnLogout" text="Logout" onAction="#onLogout"/>
        </HBox>
    </top>

    <!-- LEFT MENU -->
    <left>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Button fx:id="btnEventos" text="Eventos Ativos" onAction="#onEventos"/>
            <Button fx:id="btnInscricoes" text="Inscrições" onAction="#onInscricoes"/>
            <Button fx:id="btnAvaliacoes" text="Avaliações" onAction="#onAvaliacoes"/>
            <Button fx:id="btnNotificacoes" text="Notificações" onAction="#onNotificacoes"/>
        </VBox>
    </left>

</BorderPane>
