<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefHeight="550.0" prefWidth="900.0"
           style="-fx-background-color: white;"
           xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="lp.JavaFxClient.Controllers.RegisterController">

    <children>
        <VBox alignment="TOP_CENTER" maxWidth="420.0" spacing="14.0"
              style="-fx-background-color: white; -fx-background-radius: 16; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 24, 0.2, 0, 10);">
            <padding>
                <Insets top="28.0" right="28.0" bottom="28.0" left="28.0"/>
            </padding>

            <children>
                <Label text="Criar Conta" style="-fx-font-weight: 800; -fx-text-fill: #2b2b2b;">
                    <font><Font size="40.0"/></font>
                </Label>

                <Label text="Nome" style="-fx-font-weight: bold; -fx-text-fill: #5a5a5a;"/>
                <TextField fx:id="nomeField" prefHeight="40.0" prefWidth="320.0"
                           promptText="Insere o nome"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d6dbe3;" />

                <Label text="Email" style="-fx-font-weight: bold; -fx-text-fill: #5a5a5a;"/>
                <TextField fx:id="emailField" prefHeight="40.0" prefWidth="320.0"
                           promptText="Insere o email"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d6dbe3;" />

                <Label text="Password" style="-fx-font-weight: bold; -fx-text-fill: #5a5a5a;"/>
                <PasswordField fx:id="passwordField" prefHeight="40.0" prefWidth="320.0"
                               promptText="Insere a password"
                               style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #d6dbe3;" />

                <Button text="Registar"
                        prefHeight="42.0"
                        style="-fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-border-radius: 10;"
                        onAction="#onRegister" />

                <Button text="Voltar ao Login"
                        prefHeight="42.0"
                        style="-fx-background-color: #e9eef5; -fx-text-fill: #2b2b2b; -fx-font-weight: bold; -fx-border-radius: 10;"
                        onAction="#onBackToLogin" />
            </children>
        </VBox>
    </children>
</StackPane>
