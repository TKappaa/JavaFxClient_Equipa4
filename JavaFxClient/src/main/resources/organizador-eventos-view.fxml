<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="lp.JavaFxClient.Controllers.OrganizadorEventosController" spacing="10">
    <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
    
    <Label text="Meus Eventos" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
    
    <TableView fx:id="eventosTable" prefHeight="450">
        <columns>
            <TableColumn fx:id="colTitulo" text="Título" prefWidth="200"/>
            <TableColumn fx:id="colLocal" text="Local" prefWidth="150"/>
            <TableColumn fx:id="colInicio" text="Início" prefWidth="120"/>
            <TableColumn fx:id="colFim" text="Fim" prefWidth="120"/>
            <TableColumn fx:id="colEstado" text="Estado" prefWidth="100"/>
        </columns>
    </TableView>
</VBox>

