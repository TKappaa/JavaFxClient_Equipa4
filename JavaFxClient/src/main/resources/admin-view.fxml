<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="lp.JavaFxClient.Controllers.AdminController"
            fx:id="rootPane">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label fx:id="welcomeLabel" text="Bem-vindo"
                   style="-fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="12" prefWidth="180" style="-fx-background-color: #efefef;">
            <padding>
                <Insets top="20" right="15" bottom="20" left="15"/>
            </padding>

            <Label text="ADMIN" style="-fx-font-size: 20; -fx-font-weight: bold;"/>

            <Button text="Utilizadores" onAction="#onUtilizadores"/>
            <Button text="Eventos" onAction="#onEventos"/>
            <Button text="Logout" onAction="#onLogout"/>
        </VBox>
    </left>

    <center>
        <StackPane>
            <Label text="Escolhe uma opção no menu."
                   style="-fx-text-fill: #666; -fx-font-size: 14;"/>
        </StackPane>
    </center>

</BorderPane>
